<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/resultPhotos"
        android:layout_width="match_parent"
        android:layout_height="147dp" />

    <Button
        android:id="@+id/searchByTag"
        android:layout_width="188dp"
        android:layout_height="50dp"
        android:layout_below="@id/resultPhotos"
        android:layout_centerHorizontal="true"
        android:text="Search by Tag" />

    <CheckBox
        android:id="@+id/location"
        android:layout_width="196dp"
        android:layout_height="47dp"
        android:layout_below="@id/searchByTag"
        android:text="Location Tag" />

    <CheckBox
        android:id="@+id/person"
        android:layout_width="188dp"
        android:layout_height="48dp"
        android:layout_below="@id/searchByTag"
        android:layout_toRightOf="@id/location"
        android:text="Person Tag" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/person"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the Value!" />

        <EditText
            android:id="@+id/tagInsert"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:hint="Just Enter the Value of the Tag for Searching!"
            android:inputType="textPersonName" />

        <ListView
            android:id="@+id/resultOptions"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <Button
            android:id="@+id/chooseSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Which Option!" />
    </LinearLayout>


</RelativeLayout>